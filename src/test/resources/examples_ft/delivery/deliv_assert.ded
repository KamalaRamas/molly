num_nodes(Node, count<Network>) :- node(Node, Network);
num_log(Pload, count<Node>) :- log(Node, Pload);

pre(Node, Pload) :- log(Node, Pload), notin bcast(Node, Pload)@1, notin crash(Node, Node, _);
post(Node, Pload) :- log(Node, Pload), num_log(Pload, CntLog), num_nodes(Node, CntNodes), CntLog > CntNodes;
